{
  "version": 6,
  "configurePresets": [
    {
      "name": "windows-x64",
      "displayName": "Windows x64 (Clang)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/windows-x64",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang-cl",
        "CMAKE_CXX_COMPILER": "clang-cl",
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
        "CMAKE_BUILD_TYPE": "Release",
        "ENABLE_TEXT_EXTRACTION": "ON",
        "VCPKG_MANIFEST_FEATURES": "tests;text-extraction"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "windows-x64-msvc",
      "displayName": "Windows x64 (MSVC)",
      "generator": "Visual Studio 17 2022",
      "architecture": "x64",
      "binaryDir": "${sourceDir}/build/windows-x64",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
        "ENABLE_TEXT_EXTRACTION": "ON",
        "VCPKG_MANIFEST_FEATURES": "tests;text-extraction"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "android-arm64",
      "displayName": "Android ARM64 (no text extraction)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/android-arm64",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_TARGET_TRIPLET": "arm64-android",
        "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "$env{ANDROID_NDK}/build/cmake/android.toolchain.cmake",
        "ANDROID_ABI": "arm64-v8a",
        "ANDROID_PLATFORM": "android-24",
        "CMAKE_BUILD_TYPE": "Release",
        "BUILD_TESTS": "OFF",
        "ENABLE_TEXT_EXTRACTION": "OFF"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "windows-x64-release",
      "configurePreset": "windows-x64",
      "configuration": "Release"
    },
    {
      "name": "android-arm64-release",
      "configurePreset": "android-arm64",
      "configuration": "Release"
    }
  ]
}

