{
  "name": "familyvault",
  "version": "0.1.0",
  "dependencies": [
    {
      "name": "sqlite3",
      "features": ["fts5"]
    },
    "openssl",
    "nlohmann-json",
    "fmt",
    "spdlog"
  ],
  "features": {
    "tests": {
      "description": "Build unit tests",
      "dependencies": ["gtest"]
    },
    "text-extraction": {
      "description": "Enable text extraction from documents (PDF, DOCX, etc.)",
      "dependencies": [
        "poppler",
        "libzip", 
        "pugixml",
        {
          "name": "pkgconf",
          "host": true
        }
      ]
    }
  },
  "default-features": ["tests"]
}
